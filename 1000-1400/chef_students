#include <stdio.h>
#include<string.h>

int main() {
	// your code goes here
	int t;
	scanf("%d",&t);
	while(t--){
	    char s[1000001];
	    scanf("%s",s);
	    int n=strlen(s);
	    int count=0;
	    
	    
	    for(int i=0;i<n-1;i++){
	        if (s[i]=='<' && s[i+1]=='>')
	        {
	            count++;
	        }
	    }
	    printf("%d\n",count);
	}

}

